<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameTestApp.Views.HomePage"
             Title="">
    <ScrollView>
        <VerticalStackLayout 
            Spacing="20"
            Margin="30"
            VerticalOptions="Center">
            <Label 
                FontAttributes="Bold"
                FontSize="Header"
                Text="Bienvenido al test de C#"
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
            <Button
                FontSize="Medium"
                FontAttributes="Bold"
                Text="Iniciar"
                Clicked="GoToTest"/>
            <Button
                FontSize="Medium"
                FontAttributes="Bold"
                Text="Puntuacion"
                Clicked="GoToScore"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>